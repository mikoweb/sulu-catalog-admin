<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd">
    <key>catalog_category_edit</key>
    <properties>
        <property name="name" type="text_line" mandatory="true">
            <meta>
                <title>admin.common.property.name</title>
            </meta>
            <params>
                <param name="headline" value="true" />
                <param name="soft_max_length" value="255" />
                <param name="max_length" value="255" />
            </params>
        </property>
        <property name="slug" type="text_line" mandatory="true">
            <meta>
                <title>admin.common.property.slug</title>
            </meta>
            <params>
                <param name="soft_max_length" value="255" />
                <param name="max_length" value="255" />
            </params>
        </property>
        <property name="description" type="text_area" mandatory="false">
            <meta>
                <title>admin.catalog_category.property.description</title>
            </meta>
        </property>
        <property name="parentId" type="single_catalog_category_selection" mandatory="true">
            <meta>
                <title>admin.catalog_category.property.parent</title>
            </meta>
        </property>
        <property name="banner" type="single_media_selection">
            <meta>
                <title>admin.catalog_category.property.banner</title>
            </meta>
            <params>
                <param name="types" value="image"/>
                <param name="defaultDisplayOption" value="middle"/>
            </params>
        </property>
        <property name="lft" type="number" mandatory="true">
            <meta>
                <title>admin.catalog_category.property.lft</title>
            </meta>
        </property>
    </properties>
</form>
